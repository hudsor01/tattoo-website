# Cal.com Integration Environment Variables
# Copy this file to .env.local and fill in your actual values

# ========================================
# CAL.COM API CONFIGURATION
# ========================================

# Cal.com API Key (get from Cal.com dashboard)
CAL_API_KEY=cal_live_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Cal.com API URL (use v2 for latest features)
CAL_API_URL=https://api.cal.com/v2

# Cal.com OAuth Configuration (for Cal Atoms)
NEXT_PUBLIC_X_CAL_ID=cal_live_xxxxxxxxxxxxxxxxxxxxxxxxxx
X_CAL_SECRET_KEY=cal_secret_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Cal.com API Configuration (for Cal Atoms)
NEXT_PUBLIC_CAL_API_URL=https://api.cal.com/v2
NEXT_PUBLIC_REFRESH_URL=/api/cal/refresh

# Cal.com Username (for booking links)
NEXT_PUBLIC_CAL_USERNAME=ink37tattoos

# Webhook Configuration
CAL_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxx
CAL_WEBHOOK_URL=https://yourdomain.com/api/webhooks/cal

# ========================================
# AUTHENTICATION (BETTER AUTH)
# ========================================

# Better Auth Configuration
BETTER_AUTH_SECRET=your_secret_key_here_32_chars_min
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth (for admin authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ========================================
# EMAIL NOTIFICATIONS
# ========================================

# Resend API Key (for email notifications)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# ANALYTICS & MONITORING
# ========================================

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ========================================
# SECURITY
# ========================================

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# CORS Origins (for API calls)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ========================================
# DEVELOPMENT SETTINGS
# ========================================

# Enable debug logging
DEBUG_MODE=false

# Enable verbose logging
VERBOSE_LOGGING=false