# Cal.com Integration Environment Variables
# Copy this file to .env.local and fill in your actual values

# ========================================
# CAL.COM API CONFIGURATION
# ========================================

# Cal.com API Key (get from Cal.com dashboard)
CAL_API_KEY=cal_live_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Cal.com API URL (use v2 for latest features)
CAL_API_URL=https://api.cal.com/v2

# Cal.com OAuth Configuration (for Cal Atoms)
NEXT_PUBLIC_CAL_OAUTH_CLIENT_ID=cal_live_xxxxxxxxxxxxxxxxxxxxxxxxxx
CAL_OAUTH_CLIENT_SECRET=cal_secret_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Cal.com Username (for booking links)
NEXT_PUBLIC_CAL_USERNAME=ink37tattoos

# Webhook Configuration
CAL_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxx
CAL_WEBHOOK_URL=https://yourdomain.com/api/webhooks/cal

# ========================================
# REAL-TIME UPDATES (PUSHER)
# ========================================

# Pusher Configuration for Real-time Dashboard
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key_here
NEXT_PUBLIC_PUSHER_CLUSTER=us2
PUSHER_APP_ID=your_pusher_app_id
PUSHER_SECRET=your_pusher_secret

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL Database URL (Supabase or other)
DATABASE_URL="postgresql://username:password@hostname:port/database?schema=public"
DIRECT_URL="postgresql://username:password@hostname:port/database?schema=public"

# ========================================
# AUTHENTICATION (BETTER AUTH)
# ========================================

# Better Auth Configuration
BETTER_AUTH_SECRET=your_secret_key_here_32_chars_min
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth (for admin authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ========================================
# EMAIL NOTIFICATIONS
# ========================================

# Resend API Key (for email notifications)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Admin notification email
ADMIN_EMAIL=admin@yourdomain.com

# ========================================
# ANALYTICS & MONITORING
# ========================================

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (error tracking, optional)
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/disable features
ENABLE_REAL_TIME_DASHBOARD=true
ENABLE_WEBHOOK_PROCESSING=true
ENABLE_AUTO_SYNC=true
ENABLE_NOTIFICATIONS=true

# Sync intervals (in seconds)
CAL_SYNC_INTERVAL=300
METRICS_UPDATE_INTERVAL=60

# ========================================
# SECURITY
# ========================================

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# CORS Origins (for API calls)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ========================================
# DEVELOPMENT SETTINGS
# ========================================

# Enable debug logging
DEBUG_MODE=false

# Enable verbose logging
VERBOSE_LOGGING=false

# Mock Cal.com API (for development)
MOCK_CAL_API=false

# Skip webhook signature verification (development only)
SKIP_WEBHOOK_VERIFICATION=false